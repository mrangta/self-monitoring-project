<%- include('./partials/header.ejs') %>
<div class="row landing text-center">
    <h1 class="landing-head auth-head-padding">Register!</h1>
    <% if (errors) { %>
    <%- include('./partials/errors.ejs', errors) %>
    <% } %>
<form method="POST" action="/auth/registration">
    <div class="mb-3 row">
        <label for="inputEmail" class="col-sm-4 col-form-label">Email Address</label>
        <div class="col-sm-8">
            <input type="email" class="form-control" name="email" value="<%= email %>" id="inputEmail">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-4 col-form-label">Enter Password</label>
        <div class="col-sm-8">
            <input type="password" class="form-control" name="password" id="inputPassword">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="inputVerifyPassword" class="col-sm-4 col-form-label">Verify Password</label>
        <div class="col-sm-8">
            <input type="password" class="form-control" name="verification" id="inputVerifyPassword">
        </div>
    </div>
    <div class="mb-3 ">
        <button type="submit" class="btn bg-btn text-white mb-3">Register</button>
    </div>
</form>
<a href="/auth/login" class="txt-color" tabindex="-1" role="button">Login as an existing user!</a>
<%- include('./partials/footer.ejs') %>